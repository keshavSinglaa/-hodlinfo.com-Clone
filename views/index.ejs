    <style>
      html, body {
          height: 100%;
          margin: 0;
          display: flex;
          flex-direction: column;
      }
      body {
          background-color: #191d28;
          font-family: "Oswald", sans-serif;
          color: white;
      }
      main {
          flex: 1;
      }
      .home-footer {
          width: 100%;
          height: 47px;
          background-color: #191d28;
          text-align: center;
          position: relative;
          bottom: 15px;
      }
      select, option {
          color: white;
          background-color: #2e3241;
      }
      ul {
          display: flex;
          justify-content: space-between;
          padding: 0;
          margin-top: 20px;
          list-style: none;
      }
      .dropdown-menu .dropdown-item {
          background-color: white;
      }
      .dropdown {
          margin-left: 20px;
      }
      .dropdown-item:hover {
          background-color: #90cbff;
      }
      .telegram-btn {
          background-color: #3dc6c1;
          color: white;
          width: 200px;
          height: 50px;
          border-radius: 10px;
          border: none;
      }
      a {
          text-decoration: none;
      }
      .option {
          margin-left: 200px;
      }
      .timer-circle {
          position: relative;
          width: 40px;
          height: 40px;
          border-radius: 50%;
          border: 4px solid #3dc6c1;
          display: flex;
          justify-content: center;
          align-items: center;
          font-size: 20px;
          color: white;
          margin-right: 20px;
      }
      .right-nav {
          margin-left: 10px;
      }
      header {
          margin-bottom: -16px;
      }
      .hero-main {
          padding-top: 10px;
      }
      .hero {
          height: 100px;
          text-align: center;
      }
      .hero .hero-list {
          font-size: 24px;
          color: #3dc6c1;
      }
     
      .list {
          font-size: 18px;
          font-weight: bold;
      }
      .home-btn {
          color: #3dc6c1;
          border: 2px solid #3dc6c1;
          background-color: transparent;
          padding: 6px 20px;
          border-radius: 5px;
      }
      .table-container {
          max-height: 300px;
          overflow-y: auto;
      }
      .table th, .table td {
          font-size: 14px;
      }

      /* Media Queries */
      @media (max-width: 1200px) {
          .option {
              margin-left: 100px;
          }
          .hero .hero-list {
              font-size: 20px;
          }
          .table-container {
              max-height: 250px;
          }
      }

      @media (max-width: 992px) {
          ul {
              flex-direction: column;
              align-items: center;
          }
          .option {
              margin-left: 0;
              margin-top: 10px;
          }
          .telegram-btn {
              width: 180px;
              height: 45px;
          }
          .timer-circle {
              width: 35px;
              height: 35px;
              font-size: 18px;
          }
      }

      @media (max-width: 768px) {
          .hero {
              height: auto;
              padding: 10px 0;
          }
          .hero .hero-list {
              font-size: 18px;
          }
          .list {
              font-size: 16px;
          }
      }

      @media (max-width: 576px) {
          .hero-main {
              padding-top: 0;
          }
          .telegram-btn {
              width: 150px;
              height: 40px;
              font-size: 14px;
          }
          .timer-circle {
              width: 30px;
              height: 30px;
              font-size: 16px;
          }
          .table th, .table td {
              font-size: 12px;
          }
          .home-btn {
              padding: 4px 15px;
              font-size: 14px;
          }
      }

      @media (max-width: 400px) {
          .hero .hero-list {
              font-size: 16px;
          }
          .timer-circle {
              font-size: 14px;
          }
      }
      .table-container {
    max-height: 300px;
    overflow-y: auto;
    margin-top: 0; /* Ensure there's no top margin */
    }

   .table {
    margin-top: 0; /* Remove the top margin from the table */
    }
 
  </style>
</head>
