    <script>
      function startTimer(duration, display) {
        var timer = duration;
        setInterval(function () {
          display.textContent = timer;

          if (--timer < 0) {
            timer = duration;
          }
        },1000);
      }

      window.onload = function () {
        var display = document.getElementById("timer");
        startTimer(60, display);
      };
    </script>
